  <%= form_with model: [@comment], local: false do |f| %>
    <%= f.text_area :body, rows:'2', placeholder: "コメントをここに", class: "w-80  border rounded focus:outline-none focus:bg-white" %>
    <%= f.submit "更新", class: "py-1.5 px-4 transition-colors bg-gray-50 border active:bg-gray-200 font-medium border-gray-200 text-gray-900 rounded-lg hover:bg-gray-100 disabled:opacity-50" %>
  <% end %>
<% end %>
  