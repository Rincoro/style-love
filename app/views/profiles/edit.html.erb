<div class="mt-8">
  <div class="w-10/12 mx-auto md:max-w-md">
    <h1 class= "p-2 g-col-6 font-semibold text-2xl  text-center">
    <%= t('profile.edit') %>
    
    </h1>
    <%= form_with model: @user, url: profile_path  do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.file_field :icon, class: "w-full py-2", accept: 'image/png, image/jpeg' %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'w-full py-2 border-b focus:outline-none focus:border-b-2 focus:border-pink-500 placeholder-gray-500 placeholder-opacity-50' %>

        <%= f.label :email %>
        <%= f.text_field :email, class: 'w-full py-2 border-b focus:outline-none focus:border-b-2 focus:border-pink-500 placeholder-gray-500 placeholder-opacity-50' %>

      <button class="bg-gray-400 hover:bg-gray-600 text-white rounded px-4 py-2 m-3">
      <%= f.submit '編集' %>
      </button>
    <% end %>
  </div>
</div>