<div class="flex tems-center justify-center">
  <div class="text-left w-10/12  md:max-w-md bg-white shadow-lg rounded-lg p-6 m-8">

  <div class="flex items-center justify-center mb-4">
  <% if @user.icon.present? %>
    <div class="w-20 h-20 rounded-full overflow-hidden border-4 border-pink-400"> <!-- ここでサイズを設定 -->
      <%= image_tag @user.icon_webp, class: 'w-full h-full object-cover' %> <!-- w-fullとh-fullで画像を調整 -->
    </div>
    <% else%>
    <%end%>
  </div>
    <div class="mb-4 p-4 border border-pink-300 rounded-lg bg-white"> <!-- 背景を白に変更 -->
      <h2 class="text-lg font-semibold text-pink-600">名前</h2>
      <p class="text-gray-800 mb-2"><%= @user.name %></p>
      
      <h2 class="text-lg font-semibold text-pink-600">メールアドレス</h2>
      <p class="text-gray-800 mb-4"><%= @user.email %></p>

      <div class="flex justify-center">
        <%= link_to "編集", edit_profile_path, class: "flex items-center justify-center h-10 w-32 rounded-md bg-pink-500 text-white font-semibold transition duration-200 hover:bg-pink-600 active:bg-pink-700" %>
      </div>
    </div>
  </div>
</div>

<% if @articles.present? %>
  <div class="grid gap-x-4 gap-y-6  sm:grid-cols-2 md:gap-x-6 lg:grid-cols-4 xl:grid-cols-4 m-4">
    <%= render "profiles/article" %> 
  </div>
<% else %>
  <p><%= t('articles.index.no_articles') %></p>
<% end %>