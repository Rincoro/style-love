<% if item.present? && item.image.attached? && item.name.present? %>
<div class="border-b p-4 shadow rounded  max-w-lg mx-auto m-20">
    <div class="shrink-0">
        <h3 class="font-bold text-xl mb-2"><%= item.name %></h3>
        <div class="text-md text-gray-700 mb-2">
            <%= item.item_category %> 
        </div>
        <div class="m-2">
            <%= image_tag item.image, class: "rounded-lg object-cover w-full h-48", size: "600x200" %>
        </div>
        <div class="m-2 flex items-center justify-between">
            <span class="font-semibold"><%= item.brand %></span>
            <% if item.store_url.present? %>
                <%= link_to "購入元へ", item.store_url, target: "_blank", rel: "noopener noreferrer", class: "text-blue-500 hover:underline" %>
            <% end %>
        </div>
    </div>
  </div>
<%end%>