<div class="row">
<div class="flex   m-3">
  <%= search_form_for @q, url: articles_path, class:"flex" do |f| %>
    <%= f.search_field :title_or_oshi_point_or_user_name_cont, placeholder: 'キーワードから探す', class:'border-2 border-pink-500 rounded-full py-2 px-4 focus:outline-none focus:border-pink-700 transition duration-300' %>
    <%= f.submit '検索', class: 'ml-2 bg-pink-500 text-white rounded-full py-2 px-6 hover:bg-pink-600 transition duration-300' %>
  <% end %>
  </div>
  <div class="col-12">
      <% if @articles.present? %>
        <h2 class="text-2xl font-bold text-gray-800 m-3 ">みんなの推し活コーデ</h2>
        <div class="grid gap-x-4 gap-y-6 sm:grid-cols-2 md:gap-x-6 lg:grid-cols-4 xl:grid-cols-4 m-4">
          <%= render @articles %> 
        </div>
        <div class="justify-center flex items-center space-x-2 m-2" >
        <%= paginate @articles %>
        </div>
      <% else %>
        <p><%= t('articles.index.no_articles') %></p>
      <% end %>
    </div>
  </div>
</div>