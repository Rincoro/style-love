

  <div class="nested-fields bg-gray-200 m-3 p-5 rounded-lg shadow-lg">
    <div class="mb-3 ml-2 ">
    <div id="item-name">
      <%= f.label :name %>
      </div>
      <%= f.text_field :name, class: "block sm:w-4/8 bg-white py-2 px-3 text-gray-800 border rounded focus:outline-none bg-white item-name-input"  %>
    </div>

    <div class="mb-3 ml-2">
    <%= f.label :brand %>
    <%= f.text_field :brand, class: "block sm:w-4/8 bg-white py-2 px-3 text-gray-800 border rounded focus:outline-none bg-white" %>
    </div>

    <div class="mb-3 ml-2">
    <%= f.label :item_category %>
    <%= f.select :item_category, Item.item_categories_i18n.map { |k, v| [v, k] }, class: "block sm:w-4/8 bg-white py-2 px-3 text-gray-800 border rounded focus:outline-none bg-white" %>
    </div>

    <div class="mb-3 ml-2">
    <%= f.label :store_url %>
    <%= f.text_field :store_url, class: "block sm:w-4/8 bg-white py-2 px-3 text-gray-800 border rounded focus:outline-none bg-white" %>
    </div>
    <div class="mb-3 ml-2">
    <label class="mt-2 sm:mt-0 py-2 w-[180px] sm:w-[120px] h-8 bg-pink-300 text-white rounded-[3px] text-xs flex">
    <span class="ml-5">アイテム画像</span>
    <%= f.file_field :image, class: "hidden", accept: 'image/png, image/jpeg' %>
    </label>
    </div>
    <div class="mb-3 ml-2 flex h-8 w-12 items-center justify-center rounded-md border bg-white text-center text-sm font-semibold text-gray-800 transition duration-100 hover:bg-gray-100 active:bg-gray-200">
    <%= link_to_remove_association t('button.delete'), f %>
    </div>
  </div>
