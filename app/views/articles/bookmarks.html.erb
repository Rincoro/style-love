<div class="col-12">
  <% if @bookmarks.present? %>
    <h2 class="text-2xl font-bold text-gray-800 m-3 ">お気に入りのコーデ</h2>
    <div class="grid gap-x-4 gap-y-6 sm:grid-cols-2 md:gap-x-6 lg:grid-cols-4 xl:grid-cols-4 m-4">
      <%= render @bookmarks %> 
    </div>
    <div class="justify-center flex items-center space-x-2 m-2" >
    <%= paginate @bookmarks%>
    </div>
  <% else %>
    <p><%= "お気に入りコーデはありません" %></p>
  <% end %>
</div>
