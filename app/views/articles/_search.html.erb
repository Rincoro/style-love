<div class="row">
<div class="flex   m-3">
  <%= search_form_for q, url: articles_path, class:"flex" do |f| %>
    <%= f.search_field :title_or_oshi_point_or_user_name_cont, placeholder: 'キーワードから探す', class:'border-2 border-pink-500 rounded-full py-2 px-4 focus:outline-none focus:border-pink-700 transition duration-300' %>
    <div class="col-auto m-2">
    <%= f.select :category_eq, Article.categories_i18n.map { |k, v| [v, k] },
    { include_blank: "指定なし" }, 
    { class: 'form-control mr-1 border-2 border-pink-300 rounded-full focus:outline-none focus:border-pink-500' } %>
  </div>
  <div class="col-auto m-2">
    <%= f.select :color_eq, Article.colors_i18n.map { |k, v| [v, k] },
    { include_blank: "指定なし" }, 
    { class: 'form-control  border-2 border-pink-300 rounded-full focus:outline-none focus:border-pink-500' } %>
  </div>
    <%= f.submit '検索', class: 'ml-2 bg-pink-500 text-white rounded-full py-2 px-6 hover:bg-pink-600 transition duration-300' %>
  <% end %>
  </div>