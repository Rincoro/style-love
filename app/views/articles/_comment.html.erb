<div id="comment-<%= comment.id %>", class="border-b mb-3 pb-2 max-w-3xl mx-auto p-4 bg-white shadow-lg rounded-lg border border-gray-300 mb-4">
  <h3 class="text-lg font-semibold text-pink-600"><%= comment.user.name %></h3>
  <div class="flex justify-between items-center mt-2">
    <div class="mt-2 text-gray-800">
      <%= comment.body %>
    </div>
    <% if current_user.my_comment?(comment) %>
      <div class="space-x-2">
        <%= link_to '編集', edit_comment_path(comment), class: 'text-blue-500 hover:underline py-1 px-3 transition-colors bg-blue-100 border border-blue-300 rounded-lg hover:bg-blue-200' %>
        <%= link_to '削除', comment_path(comment), class: 'text-red-500 hover:underline py-1 px-3 transition-colors bg-red-100 border border-red-300 rounded-lg hover:bg-red-200', data: { turbo_method: :delete, turbo_confirm: '削除してもいいですか？' } %>
      </div>
    <% end %>
  </div>
</div


