
<div>
  <div class="group mb-2 block h-96 overflow-hidden rounded-lg bg-gray-100 shadow-lg lg:mb-3">
    <% if article.image.attached? %>
      <%= image_tag article.image, class: "h-full w-full object-cover object-center transition duration-200 group-hover:scale-110" %>
    <% end %> 
  </div>
  
  <div class="flex flex-col">
    <div class="flex items-center"> <!-- アイコンと名前を横に並べるためのdiv -->
      <% if article.user.icon.attached? %>
        <%= image_tag article.user.icon, class: "h-10 w-10 rounded-full mr-2" %> <!-- 丸くするためのクラスを追加 -->
        <% else %>
      <% end %>
      
      <span class="text-gray-500">
        <%= article.user.name %> 
      </span>
    </div>
    <div class="flex items-center text-lg font-bold text-gray-800 transition duration-100 hover:text-gray-500 lg:text-xl  justify-between">
      <%= link_to "#{article.title}", article_path(article.id) %>
      <% if logged_in? %>
        <%= render 'bookmark_buttons', { article: article } %>
      <% else %>
      <% end %>
    </div>
  </div>
</div>