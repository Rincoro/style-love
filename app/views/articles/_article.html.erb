<div>
  <div class="group mb-2 block h-96 overflow-hidden rounded-lg bg-gray-100 shadow-lg lg:mb-3">
  <% if article.image.attached? %>
    <%= image_tag article.image, class: "h-full w-full object-cover object-center transition duration-200 group-hover:scale-110" %>
  <% end %> 
  </div>
  <div class="flex flex-col">
    <span class="text-gray-500">
    <%= link_to "#{article.title}", article_path(article.id) %>
   
    </span>
    <div class="text-lg font-bold text-gray-800 transition duration-100 hover:text-gray-500 lg:text-xl">
      <%= article.user.name %>
    </div>
  </div>
</div>